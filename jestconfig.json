{
    "roots": [
        "<rootDir>/src"
    ],
    "globals": {
        "ts-jest": {"tsConfig": "tsconfig.test.json"}
    },
    "transform": {
        "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "testEnvironmentOptions": {
        "resources": "usable",
        "runScripts": "dangerously"
    },
    "setupFilesAfterEnv": [
        "<rootDir>/test/setup.ts"
    ]
}